package ArrayList;

import java.util.ArrayList;

public class Ex01 {

    public static void main(String[] args) {

        // 배열의 단점 : 크기를 바꿀수 없다 길이를 정하고 시작한다
        // 최대길이이상의 데이터를 넣을수 없다 배열에 중간에 비어있는 요소가 생겼을떄 비워 둘 수 없으므로 배열요소
        // 위치를 변경해줘야 한다

        //ArrayList<E> arr = new ArrayList<E>();
        ArrayList<String> strs = new ArrayList<>();
        ArrayList<Integer> inte = new ArrayList<Integer>();
        ArrayList<Book> books = new ArrayList<Book>(); // 사용자가 만든 클래스를 데이터타입으로 어레이리스트를 만들수있다
        // 모든 기본타입을 제네릭 타입으로 변경해서 사용해야 한다

        // 주요 메서드
        // boolean add(n) : 요소 하나를 배열에 추가
        // int size() : 전체 요소의 개수를 리턴
        //E get(int index) : 배열의 인덱스 위치에 있는 요소값 반환
        //E remove(int index) : 배열의 인덱스 위치에 있는 요소값 제거 그값을 반환
        // boolean isEmpty() : 배열이 비어있는지 확인
    }
}

package chap_01;

public class _04_Comment { 
	public static void main(String[] args) {
		// 코드를 잠시 수행하지않도록 주석으로 처리할수있다
		//System.out.println("(10분전) 잠시후 특강이 시작됩니다 학생여러분 착석을 부탁드립니다");
		System.out.println("(5분전) 잠시후 특강이 시작됩니다 학생여러분 착석을 부탁드립니다");
		//System.out.println("지금부터 특강이 시작됩니다 학생여러분 착석을 부탁드립니다");
		
		
		// 프로그램의 의도를 주석으로 나타내어 다른사람이 한번에 이해하기 쉽도록 주석을 활용할수있다
		int size = 120;
		size = size + 10; // 어린이는 발이 빨리 자라기 때문에 사이즈 를 10정도 더 크게 구매할려고 한다
		System.out.println("신발사이즈"+ size + "주세요");
		
		// 한줄 주석 // 사용
		// 여러줄 주석 /* 내용 */ : 단축키 Ctrl + Shift + /
	}

}

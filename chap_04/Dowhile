package chap_04;

public class _07_Dowhlie {
	public static void main(String[] args) {
		// 반복문 dowhile
		int dis = 25;
		int move = 0;
		while (move < dis) {
			System.out.println("스토로클 합니다");
			System.out.println("현재이동거리"+move);
		}
		
		do {
			System.out.println("스토로크를 합니다");
			System.out.println("현재이동거리" + move);
			move +=3;
		} while (move < dis); {
			System.out.println("스토로클 합니다");
			System.out.println("현재이동거리"+move);
		}
		
		
	}

}

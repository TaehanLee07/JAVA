package chap_04_;
// 구구단을 단보다 곱하는 수가 작거나 같은 경우끼리까지만 출력
// 2 * 1 = 2
// 2 * 2 = 4
// 3 * 1 = 3
// 3 * 2 = 6
// 3 * 3 = 9
public class _Ex_02_ {
	public static void main(String[] args) {
		for (int i = 2; i < 10; i++) {
			for (int j = 1; j < 10; j++) {
				System.out.println(i + "X" + j + "=" + i*j);
			if (i == j) {
				break;
			}
				
			}
			
		}
	}

}

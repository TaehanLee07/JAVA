package test;

import java.util.Scanner;

public class Ex_02 {
	// 입력받은 정수만큼 랜덤하게 성적을 입력받아서 총점과 평균을 출력하시오
	// 총 n명의 학생의 총합은 80 점이고 평균은 80.0입니다
	// 몇명의 성적을 입력받겠습니까? 라고 물어본후 
	// 5명
	// 5명의 성적을 입력받아서 처리
	public static void main(String[] args) {
		double result = 0.0;
		Scanner sc = new Scanner(System.in);
		System.out.print("몇명의 성적을 입력 받겠습니까? ");
		int a = sc.nextInt();
		System.out.println();
		System.out.println(a + "명의 성적의 성적을 입력해주세요 ");
		for (int i = 0; i <a; i++) {
			int b = sc.nextInt();
			result += b ;
			
		}
		sc.close();
		System.out.println(result / a);
		
		
	}

}

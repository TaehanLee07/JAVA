package test;

import java.util.Scanner;

public class Ex09 {
	public static void main(String[] args) {
		
		
		// 파이값 구하기 
		Scanner sc = new Scanner(System.in);
		
		double pi = 0;
		double buho = 1;
		double bunmo = 1;
		
		System.out.println("반복횟수 : ");
		int num = sc.nextInt();
		
		
		for (int i = 0; i < num; i++) {
			pi = pi + (4 / bunmo) * buho;
			bunmo = bunmo +=2;
			buho =buho * (-1);
			
			
			
		}
		System.out.println(pi);
	}

}
